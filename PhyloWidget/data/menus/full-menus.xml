<menuset name="PhyloWidget Menus">
	<menu type="Toolbar" fontsize="11">
		<item name="File">
			<item name="New Tree" action="newTree" shortcut="control-n"/>
			<item name="Load Tree..." action="openFile"/>
			<item name="Output Tree">
				<item name="Large (1600x1200)" action="outputBig"/>
				<item name="Small (640 x 480)" action="outputSmall"/>
				<item name="PDF (Pub. quality)" action="outputPDF"/>
			</item>
		</item>
		<item name="View">
			<item name="Zoom to Full" action="zoomToFull" shortcut="control-F"/>
			<item name="Renderer Type">
				<item name="Phylogram" action="phyloView" shortcut="control-1"/>
				<item name="Cladogram" action="cladoView" shortcut="control-2"/>
				<item name="Diagonal" action="diagonalView" shortcut="control-3"/>
			</item>
			<item name="Show/Hide">
				<item name="Branch Lengths" type="CheckBox" property="showBranchLengths" value="false"/>
				<item name="Inner Clade Labels" type="CheckBox" property="showCladeLabels" value="true"/>			
			</item>
			<item name="Drawing Style">
				<item name="Text Angle" type="NumberScroller" property="textRotation" increment=".5" default="0" min="-45" max="45"/>
				<item name="Text Size" type="NumberScroller" property="textSize" increment =".01" default="1" min="0" max="2"/>
				<item name="Node Size" type="NumberScroller" property="nodeSize" increment =".005" default=".25" min="0" max="1"/>
				<item name="Line Weight" type="NumberScroller" property="lineSize" increment =".001" default=".1" min="0" max=".5"/>
			</item>
			<item name="Threshold" type="NumberScroller" property="renderThreshold" increment="5" default="300" min="0" max="10000"/>
		</item>
		<item name="Tree">
			<item name="Mutator (for fun!)">
				<item name="Mutate Once" action="mutateOnce" shortcut="control-m"/>
				<item name="Mutate Slow" action="mutateSlow"/>
				<item name="Mutate Fast" action="mutateFast"/>
				<item name="Stop Mutating" action="stopMutating" shortcut="control-shift-m"/>
			</item>
			<item name="Flip Tree" action="flipTree" shortcut="control-R"/>
			<item name="Auto-sort Tree" action="sortTree" shortcut="control-L"/>
			<item name="Remove Elbows" action="removeElbows" shortcut="control-E"/>
		</item>
	</menu>

	<menu name="dock" type="ToolDock" width="30" rotation="left">
	<!-- the "rotation" parameter can have the values: left, right, top, bottom -->
		<item name="Arrow" tool="arrow" shortcut="a" icon="dock/arrow.png"/>
		<item name="Scroll" tool="scroll" shortcut="s" icon="dock/grab.png"/>
		<item name="Zoom" tool="zoom" shortcut="z" icon="dock/zoom.png"/>
	</menu>

	<menu name="context" type="org.phylowidget.ui.PhyloContextMenu">
		<item name="Tree Edit" hint="t">
			<item name="Add" hint="a">
				<item name="Child" action="addChild" hint="c"/>
				<item name="Sister" action="addSister" hint="s"/>
			</item>
			<item name="Delete" hint="d">
				<item name="This node" action="deleteNode" hint="t"/>
				<item name="Subtree" action="deleteSubtree" hint="s"/>
			</item>
		</item>
		<item name="Layout" hint="a">
			<item name="Reroot" action="reroot" hint="r"/>
			<item name="Flip subtree" action="flipSubtree" hint="f"/>
			<item name="Switch children" action="switchChildren" hint="s"/>
		</item>
		<item name="Clipboard" hint="c">
			<item name="Cut" action="cutNode" hint="x"/>
			<item name="Copy" action="copyNode" hint="c"/>
			<item name="Paste" action="pasteNode" hint="v"/>
			<item name="Clear" action="clearClipboard" hint="r"/>
		</item>
		<item name="Node Edit" hint="e">
			<item name="Name" action="editName" hint="n"/>
			<item name="Branch length" action="editBranchLength" hint="b"/>
		</item>
		
	</menu>
</menuset>