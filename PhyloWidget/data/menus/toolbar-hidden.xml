<menu type="Toolbar" x="2" y="2" hidden="true">
	<item name="File">
		<item name="New Tree" action="treeNew" shortcut="control-n"/>
		<item name="Load Tree">
			<item name="Manual Input..." action="treeInput"/>
			<item name="From File..." action="treeLoad"/>
		</item>
		<item name="Save Tree">
			<item name="Newick..." action="treeSaveNewick"/>
			<item name="NHX..." action="treeSaveNHX"/>
			<item name="Nexus..." action="treeSaveNexus"/>
		</item>
		<item name="Export Image..." action="fileOutput"/>
	</item>
	<item name="View">
		<item name="Zoom to Full" action="zoomToFull" shortcut="control-F"/>
		<item name="Renderer Type">
			<item name="Rectangular" action="viewRectangular" shortcut="control-1"/>
			<item name="Diagonal" action="viewDiagonal" shortcut="control-2"/>
			<item name="Circular" action="viewCircular" shortcut="control-3"/>
		</item>
		<item name="Render Options">
			<item name="Render Threshold" type="NumberScroller" property="renderThreshold" increment="5" min="5" max="1000"/>
			<item name="Minimum Text Size" type="NumberScroller" property="minTextSize" increment =".1" min="0" max="36"/>
			<item name="Branch Length Scaling" type="NumberScroller" property="branchLengthScaling" increment="0.05" min="0" max="10" />
			<item name="Stretch to Fit" type="CheckBox" methodCall="setStretchToFit" />			
		</item>
		<item name="Style">
			<item name="Text Multiplier" type="NumberScroller" property="textSize" increment=".02" min="0" max="3"/>
			<item name="Text Angle" type="NumberScroller" property="textRotation" increment=".5" min="-60" max="60"/>
			<item name="Node Size" type="NumberScroller" property="nodeSize" increment ="0.05" min="0" max="20"/>
			<item name="Line Weight" type="NumberScroller" property="lineSize" increment ="0.05" min="0" max="20"/>
		</item>
		<!-- 
		<item name="Show/hide">
			<item name="Clade Labels" type="CheckBox" property="showCladeLabels"/>
			<item name="Bootstrap Values" type="CheckBox" property="showBootstrapValues"/>
		</item>
		-->
		<item name="Show all Labels" type="CheckBox" methodCall="setShowAllLabels"/>
		<item name="Branch Lengths" type="CheckBox" methodCall="setUseBranchLengths" shortcut="ctrl-b" />
	</item>
	<item name="Tree">
		<item name="Mutator (for fun!)">
			<item name="Mutate Once" action="treeMutateOnce" shortcut="control-m"/>
			<item name="Mutate Slow" action="treeMutateSlow"/>
			<item name="Mutate Fast" action="treeMutateFast"/>
			<item name="Stop Mutating" action="treeStopMutating" shortcut="control-shift-m"/>
		</item>
		<!-- <item name="Enforce Unique Labels" type="CheckBox" methodCall="setEnforceUniqueLabels"/> -->
		<item name="Flip Tree" action="treeFlip" shortcut="control-R"/>
		<item name="Auto-sort Tree" action="treeAutoSort" shortcut="control-L"/>
		<item name="Remove Elbows" action="treeRemoveElbows" shortcut="control-E"/>
		<!-- <item name="Align leaves" action="treeAlignLeaves" shortcut="control-shift-A"/> -->
	</item>
	<item type="Spacer" spaceWidth="5" />
	<item type="org.phylowidget.ui.SearchBox" name="Search:" width="130" />
</menu>